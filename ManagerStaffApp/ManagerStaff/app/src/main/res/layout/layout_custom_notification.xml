<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/img_logo_app"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:src="@drawable/logoapp" />

    <TextView
        android:id="@+id/appCompatTextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_logo_app"
        android:layout_alignBottom="@+id/img_logo_app"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_toEndOf="@+id/img_logo_app"
        android:text="@string/app_name1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_below="@+id/img_logo_app" />

    <TextView
        android:id="@+id/txt_body"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/txt_title"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:visibility="gone"
        android:textSize="12sp"
        android:layout_alignTop="@+id/appCompatTextView8"
        android:layout_alignBottom="@+id/appCompatTextView8"
        android:layout_alignParentEnd="true" />

</RelativeLayout>